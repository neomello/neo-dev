# EditorConfig - Padrão de Formatação para o Projeto
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
# Padrão específico para Markdown
indent_size = 2
trim_trailing_whitespace = true
# Linha em branco após títulos (###, ##, #)
# Isso será aplicado manualmente ou via Prettier

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

